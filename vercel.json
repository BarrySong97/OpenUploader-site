{
  "installCommand": "pnpm install",
  "buildCommand": "astro build",
  "outputDirectory": "dist",
  "github": {
    "silent": true
  },
  "headers": [
    {
      "source": "/(.*\\.(webp|jpg|jpeg|png|svg|gif|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/og.webp",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
